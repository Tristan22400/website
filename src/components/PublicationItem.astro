---
interface Props {
  title: string;
  authors: string[];
  venue: string;
  year: number;
  type: string;
  link?: string;
}

const { title, authors, venue, year, type, link } = Astro.props;
---

<div
  class="publication-item bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border-l-4 border-indigo-500"
  data-type={type}
>
  <article class="flex flex-col md:flex-row md:justify-between md:items-start">
    <div>
      <h3 class="text-xl font-bold text-gray-900 mb-2">
        {link ? (
          <a href={link} target="_blank" rel="noopener noreferrer" class="hover:text-indigo-600 transition-colors">
            {title}
          </a>
        ) : (
          title
        )}
      </h3>
      <p class="text-gray-700 mb-1">{authors.join(', ')}</p>
      <p class="text-gray-500 text-sm mb-2 italic">
        {venue} ({year})
      </p>
      <span class="inline-block px-2 py-1 bg-gray-100 text-gray-600 rounded text-xs font-semibold capitalize">
        {type}
      </span>
    </div>
  </article>
</div>
